{
  "extends": "@open-web3/dev-config/config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "baseUrl": "./packages",
    "composite": true,
    "paths": {
      "@acala-network/api": ["api/src"],
      "@acala-network/api/*": ["api/src/*"],
      "@acala-network/types": ["types/src"],
      "@acala-network/types/*": ["types/src/*"],
      "@acala-network/api-derive": ["api-derive/src"],
      "@acala-network/api-derive/*": ["api-derive/src/*"],
      "@acala-network/type-definitions": ["type-definitions/src"],
      "@acala-network/type-definitions/*": ["type-definitions/src/*"]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}
